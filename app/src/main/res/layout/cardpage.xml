<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollable"
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:layout_weight="9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="不挂科爸妈成长练习册"
            android:textColor="#4D4D4D"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="问题描述"
            android:textColor="#4D4D4D"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:button="@null"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/radio_background"
            android:textColor="@drawable/radio_color"
            />
            <CheckBox
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_1"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="问题分析"
            android:textColor="#4D4D4D"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_3"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_4"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_5"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/rb_3"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/rb_4"
                android:layout_toRightOf="@id/rb_7"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_8"
                android:layout_below="@id/rb_5"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_9"
                android:layout_below="@id/rb_6"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/rb_7"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_11"
                android:layout_below="@id/rb_8"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_12"
                android:layout_below="@id/rb_9"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
            <CheckBox
                android:id="@+id/rb_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/rb_13"
                android:layout_below="@id/rb_10"
                android:textSize="16sp"
                android:background="@drawable/radio_background"
                android:textColor="@drawable/radio_color"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="问题解决"
            android:textColor="#4D4D4D"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/rb_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:gravity="center"
            android:button="@null"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:background="@drawable/radio_background"
            android:textColor="@drawable/radio_color"
            />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#903b1c"
                android:gravity="center"
                android:textSize="20sp"
                android:text="提交"/>
</LinearLayout>